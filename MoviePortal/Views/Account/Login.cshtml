@model MoviePortal.Models.Account.LoginDTO

<div id="wrapper" class="wrap-login" style="text-align: -webkit-center;">
    <div class="card col-md-5">
        <div class="card-body">
            <div class="card-content p-2">
                <div class="text-center">
                    <img src="">
                </div>
                <div class="card-title text-uppercase text-center py-3">Login</div>
                <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="sr-only"></label>
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        <div class="position-relative has-icon-right">
                            <input type="text" asp-for="UserName" class="form-control input-shadow" autocomplete="username" placeholder="Введите логин" />
                            <div class="form-control-position">
                                <i class="fa fa-at"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only"></label>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        <div class="position-relative has-icon-right">
                            <input type="password" asp-for="Password" class="form-control input-shadow" autocomplete="current-password" placeholder="Введите пароль" />
                            <div class="form-control-position">
                                <i class="fa fa-user-o"></i>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block" id="submit-btn">Вход</button> или <a asp-action="Register" asp-controller="Account">Регистрация</a>
                </form>
            </div>
        </div>
    </div>
</div>
